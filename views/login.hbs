<div class="col-md-6 m-auto">
  <div class="card card-body">
    <h1 class="text-center mt-1">登入</h1>
    {{> message}}
    <form action="/users/login" method="POST">
      <div class="form-group">
        <label for="email">電子郵件</label>
        <input type="email" class="form-control" name="email" id="email" placeholder="輸入電子郵件" required>
      </div>
      <div class="form-group">
        <label for="password">密碼</label>
        <input type="password" class="form-control" name="password" id="password" placeholder="輸入密碼" required>
      </div>
      <button type="submit" class="btn btn-outline-dark btn-block">登入</button>
      <a href="/auth/facebook" class="btn btn-outline-dark btn-block">使用Faceboooook登入</a>
    </form>
    <p class="lead mt-2">
      沒有帳號？ <a href="/users/register">註冊</a>
    </p>
  </div>
</div>